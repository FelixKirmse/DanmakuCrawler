#include "Danmaku/TextureProvider.h"

namespace Danmaku
{
    map<String, Texture> TextureProvider::_textures;

    void AddTexture(String const& name, String const& fileName)
    {
        _textures.insert(pair<String, Texture>(name, Texture()));
        _textures[name].loadFromFile(fileName);
    }

    Texture const& GetTexture(String const& name)
    {
        return _textures[name];
    }
}
